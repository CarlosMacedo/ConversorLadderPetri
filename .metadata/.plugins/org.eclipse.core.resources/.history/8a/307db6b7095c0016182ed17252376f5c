public class FileManipulator {

	public static void readLadder(String path) throws IOException {
		BufferedReader buffRead = new BufferedReader(new FileReader(path));
		String[] word; 
		
		
		/*control variables*/
		boolean beginIOList = false;
		boolean endIOList = false;
		boolean beginRung = false;
		boolean endRung = false;
		boolean beginParallel = false;
		boolean endParallel = false;
		ArrayDeque<String> stack = new ArrayDeque<String>();
		
		String line = buffRead.readLine();
		while (line != null) {
			System.out.println(line);			
			if (line.equals("IO LIST")) { ioList = true;}
			else if (line.equals("END")) {ioList = false;}
			
			/*palavra = linha.split(" ");

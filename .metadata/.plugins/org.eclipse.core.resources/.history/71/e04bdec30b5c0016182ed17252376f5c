package main;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayDeque;

public class FileManipulator {

	public static void readLadder(String path) throws IOException {
		BufferedReader buffRead = new BufferedReader(new FileReader(path));
		String[] word; 
				
		/*control variables*/
		boolean ioList = false;
		boolean rung = false;
		boolean parallel = false;
		ArrayDeque<String> stack = new ArrayDeque<String>();
		
		String line = buffRead.readLine();
		while (line != null) {
					
			if (line.equals("IO LIST")) {	
				ioList = true;
				stack.push("IO LIST");
			} else if (line.equals("RUNG")) {
				rung = true;
				stack.push("RUNG");
			} else if (line.equals("PARALLEL")) {System.out.println(":: "+line);
				parallel = true;
				stack.push("PARALLEL");
			}
			
			/*palavra = linha.split(" ");
				for (int i = 0; i < palavra.length; i++) {
					System.out.println(":" + palavra[i]);
				}*/
			line = buffRead.readLine();
		}
		buffRead.close();
	}

	public static void writeLadder(String path) throws IOException {
		BufferedWriter buffWrite = new BufferedWriter(new FileWriter(path));
		String line = "";

		line = "Entrada";
		buffWrite.append(line + "\n");
		buffWrite.close();
	}

}

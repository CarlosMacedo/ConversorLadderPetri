package models;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.IOException;

public class Arc {
	private int id;
	private String orientation;
	private int idTrans;
	private int idPlace;
	
	public Arc(int id, String orientation, int idTrans, int idPlace) {
		this.id = id;
		this.orientation = orientation;
		this.idTrans = idTrans;
		this.idPlace = idPlace;
	}

	public void addArc(String path, BufferedWriter buffWrite) throws IOException{
		BufferedReader buffArc = new BufferedReader(new FileReader(path));
		String line = buffArc.readLine();
		while (line != null) {
			 if (line.equals("<!-- arc : arc id | STRING -->")){
				 insertIdArc(buffWrite);
			 } else if (line.equals("<!-- orientation : TtoP or PtoT or BOTHDIR | STRING -->")) {
				 insertArcOrientation(buffWrite);
			 } else if (line.equals("<!-- transend : id trans | STRING -->")) {
				 insertPlacePosy(buffWrite);
			 } else if (line.equals("<!-- transend : id place | STRING -->")) {
				 insertPlaceName(buffWrite);
			 } else  if (line.equals("<!-- annot : annot id | STRING -->")) {
				 insertTypeId(buffWrite);
			 } else  if (line.equals("<!-- text : color arc | STRING -->")) {
				 insertTypePosx(buffWrite);
			 } else {
				 buffWrite.append(line+"\n");
			 }
		
			 line = buffArc.readLine();		
		}				
		buffArc.close();
	}

	
	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getOrientation() {
		return orientation;
	}

	public void setOrientation(String orientation) {
		this.orientation = orientation;
	}

	public int getIdTrans() {
		return idTrans;
	}

	public void setIdTrans(int idTrans) {
		this.idTrans = idTrans;
	}

	public int getIdPlace() {
		return idPlace;
	}

	public void setIdPlace(int idPlace) {
		this.idPlace = idPlace;
	}
	
	
}
